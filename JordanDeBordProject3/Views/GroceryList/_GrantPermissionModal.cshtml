@model GrantPermissionsUserVM

<div class="modal fade" id="grantPermissionModal" tabindex="-1" role="dialog"
     aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal">
        <div id="mainContent" class="modal-content">
            <form id="grantPermissionForm" asp-controller="GroceryList" asp-action="GrantPermission">

                <div class="modal-header">
                    <h5 class="modalTitle" id="grantPermissionModalTitle">Grant Permission</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <input hidden readonly asp-for="ListId" value="@Model.ListId" />
                <div class="modal-body">
                    <div class="form-group row">
                        <label asp-for="EmailAddress" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-7">
                            <input asp-for="EmailAddress" class="form-control" />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="reset" class="btn btn-info">Clear</button>
                </div>
            </form>
        </div>
    </div>
</div>