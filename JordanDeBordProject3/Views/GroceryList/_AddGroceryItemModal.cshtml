@* 
    Partial View for Add Grocery Item Modal.    
*@
@model  CreateGroceryItemVM

<div class="modal fade" id="createGroceryItemModal" tabindex="-1" role="dialog"
     aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal">
        <div id="mainContent" class="modal-content">
            <form id="createGroceryItemForm" asp-controller="GroceryList" asp-action="AddItem">

                <div class="modal-header">
                    <h5 class="modalTitle" id="createGroceryItemModalTitle">Create Grocery Item</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <input hidden readonly asp-for="GroceryListId" value="@Model.GroceryListId" />
                    </div>
                    <div class="form-group row">
                        <label asp-for="QuantityToBuy" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="QuantityToBuy" class="form-control" />
                            <span asp-validation-for="QuantityToBuy" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="reset" class="btn btn-info">Clear</button>
                </div>
            </form>
        </div>
    </div>
</div>
